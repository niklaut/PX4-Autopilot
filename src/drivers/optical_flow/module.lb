def init(module):
    module.name = ":driver:optical_flow"
    module.description = "Optical Flow Drivers"


def prepare(module, options):
    module.add_modules(
        DefineModule("paa3905", define="DRIVERS_OPTICAL_FLOW_PAA3905"),
        DefineModule("paw3902", define="DRIVERS_OPTICAL_FLOW_PAW3902"),
        DefineModule("pmw3901", define="DRIVERS_OPTICAL_FLOW_PMW3901"),
        DefineModule("px4flow", define="DRIVERS_OPTICAL_FLOW_PX4FLOW"),
        DefineModule("thoneflow", define="DRIVERS_OPTICAL_FLOW_THONEFLOW"),
    )
    return True


